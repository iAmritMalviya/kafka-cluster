{
  "compilerOptions": {
    "strict": false,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "strictNullChecks": false,
    "moduleResolution": "Node",
    "module": "CommonJS",
    "target": "ES2021",
    "declaration": true,
    "isolatedModules": true,
    "noEmit": true,
    "outDir": "dist",
    "rootDir": "./src"
  },
  "include": ["src"],
  "exclude": ["node_modules"],
}